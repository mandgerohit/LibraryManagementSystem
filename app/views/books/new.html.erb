<% provide(:title, 'Add Book') %>
<h1>Add Book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
      <%= f.label :isbn %>
      <%= f.text_field :isbn %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Add Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
