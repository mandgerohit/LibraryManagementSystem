<% else %>

<% if @book.taken_by==current_user.name or current_user.admin? %>
<%= link_to "Return", book_path, method: :post %>
<% else %>
<li>Status: Not Available</li>
<% end %>
<% if current_user.admin? %>
<li>Taken by: <%= @book.taken_by %></li>
<% end %>
<% end %>

</h1>
