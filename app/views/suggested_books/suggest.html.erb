<% provide(:title, 'Suggest Book') %>
<h1>Suggest Book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for SuggestedBook.new do |f| %>

      <%= f.label :isbn %>
      <%= f.text_field :isbn, class: 'form-control' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.submit "Suggest Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>