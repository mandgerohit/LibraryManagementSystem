<% provide(:title, 'All users') %>

<h1>All Library users</h1>

<ul class="users">
  <% @users.each do |user| %>
<h5>
<li>
<%= link_to user.name, user %> |
<% if current_user.admin?%>
<% if !(current_user.id==user.id) %>
<% if user.admin?%> <%= link_to "Remove Admin", user_path(:id => user.id, :type => "admin") , :action => :removestatus, method: :post, data: { confirm: "Confirm?" } %> |
<% end %> 
<% end %> 
<% if !(current_user.id==user.id) %>
<% if user.member?%> <%= link_to "Remove Member", user_path(:id => user.id, :type => "member"), :action => :removestatus, method: :post, data: { confirm: "Confirm?" } %> |
<% end %> 
<% end %> 
<% if !(current_user.id==user.id) %>
<%= link_to "Delete User", user, method: :delete, data: { confirm: "Confirm?" } %>
<% end %>
<% end %>
</li>
<% end %>
</h5>
</ul>
